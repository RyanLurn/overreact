{
  "name": "overreact",
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "lefthook": "^1.13.6",
    "@types/bun": "^1.3.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "scripts": {
    "format": "bunx biome format --write",
    "lint": "bunx biome lint --write",
    "check": "bunx biome check --write",
    "dev": "bun --filter '*' dev",
    "web:dev": "bun --filter @repo/web dev",
    "web:install": "bun install --filter @repo/web",
    "api:dev": "bun --filter @repo/api dev",
    "api:install": "bun install --filter @repo/api"
  },
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/**",
      "packages/*"
    ],
    "catalog": {
      "react": "^19.2.0",
      "react-dom": "^19.2.0",
      "@types/bun": "^1.3.0",
      "@types/react": "^19.2.0",
      "@types/react-dom": "^19.2.0"
    }
  }
}
