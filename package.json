{
  "name": "overreact",
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "lefthook": "^1.13.6",
    "@types/bun": "^1.3.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "scripts": {
    "format": "bunx biome format --write",
    "lint": "bunx biome lint --write",
    "check": "bunx biome check --write",
    "dev": "bun --filter '*' dev",
    "web:dev": "bun --filter @repo/web dev",
    "web:install": "bun install --filter @repo/web",
    "api:dev": "bun --filter @repo/api dev",
    "api:install": "bun install --filter @repo/api",
    "api:db:generate": "bun --filter @repo/api db:generate",
    "api:db:migrate": "bun --filter @repo/api db:migrate",
    "ui:install": "bun install --filter @repo/ui"
  },
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/**",
      "packages/*"
    ],
    "catalog": {
      "react": "^19.2.0",
      "react-dom": "^19.2.0",
      "@t3-oss/env-core": "^0.13.8",
      "zod": "^4.1.12",
      "class-variance-authority": "^0.7.1",
      "clsx": "^2.1.1",
      "tailwind-merge": "^3.3.1",
      "lucide-react": "^0.546.0",
      "tw-animate-css": "^1.4.0",
      "tailwindcss": "^4.1.14",
      "@types/bun": "^1.3.0",
      "@types/react": "^19.2.0",
      "@types/react-dom": "^19.2.0"
    }
  }
}
